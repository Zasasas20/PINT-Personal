<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAssignemnt.MainPage"
             Title="">

    <ScrollView HorizontalOptions="Center">
        <FlexLayout VerticalOptions="Center" JustifyContent="SpaceEvenly" AlignItems="Center" Wrap="Wrap">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="Led Status" FontSize="24"/>
                <Button x:Name="LightController" Text="OFF" BackgroundColor="Red" Clicked="LightsSwitched"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="Auto Led Transition" FontSize="24"/>
                <Button x:Name="AutoController" Text="OFF" BackgroundColor="Red" Clicked="AutoSwitched"/>
            </StackLayout>
        </FlexLayout>
    </ScrollView>

</ContentPage>
